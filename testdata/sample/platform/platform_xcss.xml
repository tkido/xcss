<styles>
	<!-- Tags just under the root(<styles> tag) are recognized as styles -->

	<name type="type" id="id" class="foo bar" x="0" y="0" />
	<!-- tag's "name" and attributes "type", "id", "class" are handled specially.
	They are used to determine the tag to which the setting applies.
	Other attributes(in this example, x, y) are treated as simple values.	-->

	<!-- Set text widget's default "fontsize" to "S" -->
	<item type="text" fontsize="S" />

	<!-- Resize text fontsize with specific id -->
	<item type="text" id="title" fontsize="L" />

	<!-- Setting changed according to class-->
	<item type="text" class="day" fontcolor="BLACK"/>
	<item type="text" class="night" fontcolor="WHITE"/>

	<!-- It is possible to set classes semantically separated into "positions" and "colors", for example -->
	<item type="text" class="left" x="0" />
	<item type="text" class="right" x="400" />

	<!-- Setting multiple classes. Applies to tags where all classes are set -->
	<item type="text" class="day disabled" fontcolor="GRAY"/>
	<item type="text" class="night disabled" fontcolor="PARPLE"/>

	<!-- Setting child elements -->
	<widgets>
		<!-- Common background image on any screen -->
		<item type="image" id="background" w="800" h="480" imageurl="@DNA/common/bg.png"/>
		<!-- This "item" tag is only the setting value of the "widgets" selector
		Remember, tags just under the root(<styles> tag) are recognized as styles -->
	</widgets>

	<!-- in xcss file, all comments are ignored. -->
	in xcss file, all texts are ignored.
</styles>
