	<item type="image" id="background" w="800" h="480" imageurl="@DNA/common/bg.png"/>

	<item type="text" />
	<item type="text" id="title" fontsize="L" />

	<item type="text" class="day" fontcolor="BLACK"/>
	<item type="text" class="night" fontcolor="WHITE"/>

	<item type="text" class="day forest" fontcolor="GREEN"/>
	<item type="text" class="night forest" fontcolor="PARPLE"/>

	<item type="text" class="foo" w="2" h="2" />
	<item type="text" class="foo bar" w="3" h="3" />

	<item type="text" id="title" class="foo bar" w="0" h="0" />

