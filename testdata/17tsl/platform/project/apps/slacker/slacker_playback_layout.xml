<pane>
	<resources>
		<require type="Slacker_ListData" url="@APP/slacker2/data/data_slackerlistdata.ujbc"/>
	</resources>
	
	<widgets>
		<!-- background -->
		<item type="image" id="background_image" imageurl="@DNA/common/bg.png" w="800" h="416"/>
		
		<!-- side menu -->
		<item type="image" id="sidemenu_bg_image" imageurl="@DNA/common/bg_submenu.png" x="0" y="0" w="272" h="416"/>
		
		<!-- highlight -->
        <item type="alignmentcontainer" id="highlight" w="272" h="94" layout="column" alignment="top" autoarrange="true">
            <item type="box" id="highlight_box" w="272"/>
            <item type="image" id="highlight_image" imageurl="@DNA/common/submenu6_selected.png" w="272" h="94"/>
        </item>
		
		<item type="itemgroup" id="sidemenu" direction="vertical" alignment="top" x="0" y="7" w="192" h="402" min-w="192" max-w="192" min-h="67" max-h="67" max-padding="1">
			<item type="button" id="list_button" w="272" h="67" userstates="1">
				<item type="image" id="button_bg" imageurl="@DNA/common/btn_submenu6.png" w="272" h="67"/>
				<item type="image" id="button_icon" imageurl="asdf" w="80" h="67"/>
				<item type="text" id="button_text" text="button" x="97" w="170" h="67" fontcolor="0xFFFEFEFF"/>
				<states ref="sidemenu_button">
					<state user="0" touch="disabled">
						<update widget="button_bg" value0="134" type="srcy"/>
					</state>
					<state user="0" touch="idle">
						<update widget="button_bg" value0="0" type="srcy"/>
					</state>
					<state user="0" touch="action">
						<update widget="button_bg" value0="67" type="srcy"/>
					</state>
				</states>
			</item>
			<update widget="list_button" accessor="button" type="custom"/>
			<update widget="button_text" accessor="label" type="text"/>
			<update widget="button_text" accessor="sidemenu_text" type="textcolor"/>
			<update widget="button_text" accessor="sidemenu_textsize" type="textsize"/>
			<update widget="button_icon" accessor="sidemenu_image" type="imageurl"/>
		</item>
		
		<item type="composite" x="272" y="0" w="528" h="416">
			<!-- content area -->
			<item type="image" id="content_bg_image" imageurl="@DNA/common/bg_contents.png" w="528" h="416"/>
			
	        <!-- song info -->
	        <item type="composite" x="8" y="6" w="160" h="160">
	            <item type="image" id="bg_art" w="160" h="160" imageurl="@DNA/common/bg_album.png"/>
                <item type="image" id="stn_art" x="16" y="12" w="128" h="128" imageurl="asdf"/>
                <item type="image" id="dd_art" x="16" y="12" w="128" h="128" imageurl="asdf"/>
	        </item>
	        <item type="text" id="song_title" x="174" y="28" w="338" h="30" fontsize="30" fontcolor="0xFFFEFEFF" text=""/>
	        <item type="text" id="artist_name" x="174" y="72" w="338" h="24" fontsize="24" fontcolor="0xFFFEFEFF" text=""/>
	        <item type="text" id="station_name" x="174" y="104" w="338" h="24" fontsize="24" fontcolor="0xFFFEFEFF" text=""/>

	        <item type="text" id="status_text" x="174" y="28" w="338" h="30" fontsize="30" fontcolor="0xFFFEFEFF" text=""/>
			
			<!-- progressbar -->
			<item type="image" id="prog_bg" imageurl="@DNA/common/bg_progressbar.png" x="18" y="293" w="492" h="20"/>
			<item type="image" id="prog_bar" imageurl="@DNA/common/bg_progressbar_bar.png" x="18" y="293" w="0" h="20"/>
			<item type="text" id="prog_l_text" x="34" y="265" w="148" fontcolor="0xFF909091" fontsize="24"/>
			<item type="text" id="prog_r_text" x="346" y="265" w="148" fontcolor="0xFF909091" fontsize="24" alignment="right"/>
			
			<!-- button -->
			<item type="button" id="btn_back" x="82" y="174" w="112" h="88" userstates="1">
				<item type="image" id="image_back" w="112" h="88" imageurl="@DNA/common/btn_skip_back.png"/>
				<states>
					<state user="0" touch="disabled">
						<update widget="image_back" value0="176" type="srcy"/>
					</state>
					<state user="0" touch="idle">
						<update widget="image_back" value0="0" type="srcy"/>
					</state>
					<state user="0" touch="action">
						<update widget="image_back" value0="88" type="srcy"/>
					</state>
				</states>
			</item>
			<item type="button" id="btn_playback" x="207" y="174" w="112" h="88" userstates="1">
				<item type="image" id="image_playback" w="112" h="88" imageurl="@DNA/common/btn_play.png"/>
				<states>
					<state user="0" touch="disabled">
						<update widget="image_playback" value0="176" type="srcy"/>
					</state>
					<state user="0" touch="idle">
						<update widget="image_playback" value0="0" type="srcy"/>
					</state>
					<state user="0" touch="action">
						<update widget="image_playback" value0="88" type="srcy"/>
					</state>
				</states>
			</item>
			<item type="button" id="btn_skip" x="336" y="174" w="112" h="88" userstates="1">
				<item type="image" id="image_skip" w="112" h="88" imageurl="@DNA/common/btn_skip_forward.png"/>
				<states>
					<state user="0" touch="disabled">
						<update widget="image_skip" value0="176" type="srcy"/>
					</state>
					<state user="0" touch="idle">
						<update widget="image_skip" value0="0" type="srcy"/>
					</state>
					<state user="0" touch="action">
						<update widget="image_skip" value0="88" type="srcy"/>
					</state>
				</states>
			</item>
	        <item type="text" id="skip_count" x="418" y="225" w="30" fontcolor="0xFFFEFEFF" fontsize="26" alignment="center"/>
			
			<!-- bottom menu -->
            <item type="button" id="btn_ban" x="21" y="316" w="94" h="88" userstates="1">
                <item type="image" id="image_ban" w="94" h="88" imageurl="@DNA/common/btn_lower_ban_off.png"/>
                <states>
                    <state user="0" touch="disabled">
                        <update widget="image_ban" value0="176" type="srcy"/>
                    </state>
                    <state user="0" touch="idle">
                        <update widget="image_ban" value0="0" type="srcy"/>
                    </state>
                    <state user="0" touch="action">
                        <update widget="image_ban" value0="88" type="srcy"/>
                    </state>
                </states>
            </item>
			<item type="button" id="btn_heart" x="119" y="316" w="94" h="88" userstates="1">
				<item type="image" id="image_heart" w="94" h="88" imageurl="@DNA/common/btn_lower_heart_off.png"/>
				<states>
	                <state user="0" touch="disabled">
	                    <update widget="image_heart" value0="176" type="srcy"/>
	                </state>
					<state user="0" touch="idle">
						<update widget="image_heart" value0="0" type="srcy"/>
					</state>
					<state user="0" touch="action">
						<update widget="image_heart" value0="88" type="srcy"/>
					</state>
				</states>
			</item>
		</item>
		
	</widgets>
</pane>