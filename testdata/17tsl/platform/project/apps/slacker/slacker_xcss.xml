<styles>
	<!-- slacker common resource -->
	<resources>
		<require type="Slacker_ListData" url="@APP/slacker2/data/data_slackerlistdata.ujbc" />
	</resources>

	<!-- app common background widgets -->
	<widgets class="app">
		<!-- background -->
		<item type="image" id="background_image" imageurl="@DNA/common/bg.png" w="800" h="416"/>
		<!-- side menu -->
		<item type="image" id="sidemenu_bg_image" imageurl="@DNA/common/bg_submenu.png" x="0" y="0" w="272" h="416"/>
		<!-- highlight -->
		<item type="alignmentcontainer" id="highlight" w="272" h="94" layout="column" alignment="top" autoarrange="true">
			<item type="box" id="highlight_box" w="272"/>
			<item type="image" id="highlight_image" imageurl="@DNA/common/submenu6_selected.png" w="272" h="94"/>
		</item>
		<!-- app common sidemenu -->
		<item type="itemgroup" id="sidemenu" />
	</widgets>

	<!-- app common sidemenu detail -->
	<item type="itemgroup" id="sidemenu" direction="vertical" alignment="top" x="0" y="7" w="192" h="402" min-w="192" max-w="192" min-h="67" max-h="67" max-padding="1">
		<item type="button" id="list_button" w="272" h="67" userstates="1">
			<item type="image" id="button_bg" imageurl="@DNA/common/btn_submenu6.png" w="272" h="67"/>
			<item type="image" id="button_icon" imageurl="asdf" w="80" h="67"/>
			<item type="text" id="button_text" text="button" x="97" w="170" h="67" fontcolor="0xFFFFFFFF"/>
			<states ref="sidemenu_button">
				<state user="0" touch="disabled">
					<update widget="button_bg" value0="134" type="srcy"/>
				</state>
				<state user="0" touch="idle">
					<update widget="button_bg" value0="0" type="srcy"/>
				</state>
				<state user="0" touch="action">
					<update widget="button_bg" value0="67" type="srcy"/>
				</state>
			</states>
		</item>
		<update widget="list_button" accessor="button" type="custom"/>
		<update widget="button_text" accessor="label" type="text"/>
		<update widget="button_text" accessor="sidemenu_text" type="textcolor"/>
		<update widget="button_text" accessor="sidemenu_textsize" type="textsize"/>
		<update widget="button_icon" accessor="sidemenu_image" type="imageurl"/>
	</item>
	<!-- content area app -->
	<item type="composite" class="app" x="272" y="0" w="528" h="416" />

	<item type="image" id="header_bg_image" imageurl="@DNA/common/bg_navigation_bar_submenu.png" y="0" w="528" h="84"/>
	<item type="text" id="header_text" x="20" w="266" h="84" fontcolor="0xFFFFFFFF" fontsize="30"/>

	<item type="image" id="scrollbar_bg_image" imageurl="@DNA/common/bg_scroll_bar.png" x="464" y="76" w="64" h="340"/>
	<item type="text" id="noresult_text" y="76" w="464" h="68" fontcolor="0xFFFFFFFF" fontsize="26" alignment="center" text="$[GLOBAL_NO_RESULT]"/>

	<!-- Buttons -->
	<!-- back button -->
	<item type="button" id="back_button" x="434" w="94" h="76" userstates="1">
		<item type="image" id="back_image" imageurl="@DNA/common/btn_navigation_bar_back.png" w="94" h="76"/>
		<states>
			<state user="0" touch="disabled">
				<update widget="back_image" value0="152" type="srcy"/>
			</state>
			<state user="0" touch="idle">
				<update widget="back_image" value0="0" type="srcy"/>
			</state>
			<state user="0" touch="action">
				<update widget="back_image" value0="76" type="srcy"/>
			</state>
		</states>
	</item>

	<!-- search button -->
	<item type="button" id="search_button" y="0" w="448" h="76" userstates="1">
		<item type="image" id="search_image" w="448" h="76" src-w="434" src-h="76" leftdim="68" leftsize="68" rightdim="25" rightsize="25" imageurl="@DNA/common/bg_navigation_bar_search.png"/>
		<states>
			<state user="0" touch="disabled">
				<update widget="search_image" value0="152" type="srcy"/>
			</state>
			<state user="0" touch="idle">
				<update widget="search_image" value0="0" type="srcy"/>
			</state>
			<state user="0" touch="action">
				<update widget="search_image" value0="76" type="srcy"/>
			</state>
		</states>
	</item>
	<!-- search editbox -->
	<item type="editbox" id="search_editbox" y="0" w="448" h="76" bgimage="search_button" left="68" right="25" hintsize="M" maxchar="128"/>

	<!-- delete button -->
	<item type="button" id="delete_button" x="448" w="80" h="76" userstates="1">
		<item type="image" id="delete_image" imageurl="@DNA/common/btn_navigation_bar_clear.png" w="80" h="76"/>
		<states>
			<state user="0" touch="disabled">
				<update widget="delete_image" value0="152" type="srcy"/>
			</state>
			<state user="0" touch="idle">
				<update widget="delete_image" value0="0" type="srcy"/>
			</state>
			<state user="0" touch="action">
				<update widget="delete_image" value0="76" type="srcy"/>
			</state>
		</states>
	</item>

	<!-- edit button -->
	<item type="button" id="edit_button" x="314" w="114" h="76" userstates="1">
		<item type="image" id="edit_image" w="120" h="76" imageurl="@DNA/common/btn_navigation_bar_small.png"/>
		<item type="text" id="edit_text" x="10" y="27" w="100" h="26" fontcolor="0xFFFFFFFF" fontsize="26" alignment="center" text="$[SLACKER_TEXTBUTTON_EDIT]"/>
		<states>
			<state user="0" touch="disabled">
				<update widget="edit_image" value0="152" type="srcy"/>
			</state>
			<state user="0" touch="idle">
				<update widget="edit_image" value0="0" type="srcy"/>
			</state>
			<state user="0" touch="action">
				<update widget="edit_image" value0="76" type="srcy"/>
			</state>
		</states>
	</item>

	<!-- Scrollable list -->
	<!-- scrollable common setting -->
	<item type="scrollable" id="scroll" y="76" w="464" h="340" number="1" direction="vertical" scrollrate="240">
		<scrollbar side="right" size="64">
			<top type="image" id="scrollbar_top" imageurl="@DNA/common/btn_scroll_top.png" w="64" h="74" src-h="74"/>
			<thumb type="image" id="scrollbar_thumb" imageurl="@DNA/common/bg_scroll_marker.png" w="64" h="48"/>
			<bottom type="image" id="scrollbar_bottom" imageurl="@DNA/common/btn_scroll_btm.png" w="64" h="74" src-h="74"/>
		</scrollbar>
	</item>
	<!-- content_list common setting -->
	<item type="list" id="content_list" direction="top" fill="normal-page" visiblecolumns="1" itemwidth="464" />
	<!-- case row = 5. -->
	<item type="list" id="content_list" class="row5" visiblerows="5" itemheight="68" />
	<item type="list" id="content_list" class="row4" visiblerows="4" itemheight="85" />
	<!-- case row = 4. now for search result screen only -->
	<item type="list" id="content_list" class="row4" visiblerows="4" itemheight="85" />
	<!-- list_button common setting -->
	<item type="button" id="list_button" class="row5" w="464" h="68" userstates="1" emptydraw="true">
		<states>
			<state user="0" touch="disabled">
				<update widget="list_bg_image" value0="136" type="srcy"/>
			</state>
			<state user="0" touch="idle">
				<update widget="list_bg_image" value0="0" type="srcy"/>
			</state>
			<state user="0" touch="action">
				<update widget="list_bg_image" value0="68" type="srcy"/>
			</state>
		</states>
	</item>
	<!-- case row = 4. now for search result screen only -->
	<item type="button" id="list_button" class="row4" w="464" h="85" userstates="1" emptydraw="true">
		<states>
			<state user="0" touch="disabled">
				<update widget="list_bg_image" value0="170" type="srcy"/>
			</state>
			<state user="0" touch="idle">
				<update widget="list_bg_image" value0="0" type="srcy"/>
			</state>
			<state user="0" touch="action">
				<update widget="list_bg_image" value0="85" type="srcy"/>
			</state>
		</states>
	</item>

	<!-- control button -->
	<item type="button" id="btn_back" w="112" h="88" userstates="1">
		<item type="image" id="image_back" w="112" h="88" imageurl="@DNA/common/btn_skip_back.png"/>
		<states>
			<state user="0" touch="disabled">
				<update widget="image_back" value0="176" type="srcy"/>
			</state>
			<state user="0" touch="idle">
				<update widget="image_back" value0="0" type="srcy"/>
			</state>
			<state user="0" touch="action">
				<update widget="image_back" value0="88" type="srcy"/>
			</state>
		</states>
	</item>

	<item type="button" id="btn_playback" w="112" h="88" userstates="1">
		<item type="image" id="image_playback" w="112" h="88" imageurl="@DNA/common/btn_play.png"/>
		<states>
			<state user="0" touch="disabled">
				<update widget="image_playback" value0="176" type="srcy"/>
			</state>
			<state user="0" touch="idle">
				<update widget="image_playback" value0="0" type="srcy"/>
			</state>
			<state user="0" touch="action">
				<update widget="image_playback" value0="88" type="srcy"/>
			</state>
		</states>
	</item>

	<item type="button" id="btn_skip" w="112" h="88" userstates="1">
		<item type="image" id="image_skip" w="112" h="88" imageurl="@DNA/common/btn_skip_forward.png"/>
		<states>
			<state user="0" touch="disabled">
				<update widget="image_skip" value0="176" type="srcy"/>
			</state>
			<state user="0" touch="idle">
				<update widget="image_skip" value0="0" type="srcy"/>
			</state>
			<state user="0" touch="action">
				<update widget="image_skip" value0="88" type="srcy"/>
			</state>
		</states>
	</item>
	<item type="text" id="skip_count" w="30" fontcolor="0xFFFEFEFF" fontsize="26" alignment="center" />

	<!-- bottom menu button -->
	<item type="button" id="btn_ban" w="94" h="88" userstates="1">
		<item type="image" id="image_ban" w="94" h="88" imageurl="@DNA/common/btn_lower_ban_off.png"/>
		<states>
			<state user="0" touch="disabled">
				<update widget="image_ban" value0="176" type="srcy"/>
			</state>
			<state user="0" touch="idle">
				<update widget="image_ban" value0="0" type="srcy"/>
			</state>
			<state user="0" touch="action">
				<update widget="image_ban" value0="88" type="srcy"/>
			</state>
		</states>
	</item>
	
	<item type="button" id="btn_heart" w="94" h="88" userstates="1">
		<item type="image" id="image_heart" w="94" h="88" imageurl="@DNA/common/btn_lower_heart_off.png"/>
		<states>
			<state user="0" touch="disabled">
				<update widget="image_heart" value0="176" type="srcy"/>
			</state>
			<state user="0" touch="idle">
				<update widget="image_heart" value0="0" type="srcy"/>
			</state>
			<state user="0" touch="action">
				<update widget="image_heart" value0="88" type="srcy"/>
			</state>
		</states>
	</item>
</item>


</styles>
