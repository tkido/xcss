<pane>
	<resources>
	</resources>

	<widgets class="app">
		<item type="composite">
			<item type="image" id="header_bg_image" />

			<item type="button" id="search_button" />
			<item type="editbox" id="search_editbox" />

			<item type="button" id="back_button" />

			<item type="image" id="scrollbar_bg_image" />
			<item type="text" id="noresult_text" />

			<item type="scrollable" id="scroll" y="76" w="464" h="340" number="1" direction="vertical" scrollrate="240">
				<scrollbar side="right" size="64">
					<top type="image" id="scrollbar_top" imageurl="@DNA/common/btn_scroll_top.png" w="64" h="74" src-h="74"/>
					<thumb type="image" id="scrollbar_thumb" imageurl="@DNA/common/bg_scroll_marker.png" w="64" h="48"/>
					<bottom type="image" id="scrollbar_bottom" imageurl="@DNA/common/btn_scroll_btm.png" w="64" h="74" src-h="74"/>
				</scrollbar>
				<item type="list" id="content_list" direction="top" visiblerows="4" fill="normal-page" visiblecolumns="1" itemwidth="464" itemheight="85">
					<item type="button" id="list_button" w="464" h="85" userstates="1" emptydraw="true">
						<item type="image" id="list_bg_image" imageurl="@DNA/common/btn_list4_full.png" x="0" y="0" w="464" h="85"/>
						<item type="image" id="list_icon_bg" imageurl="" w="85" h="85"/>
						<item type="image" id="list_icon" imageurl="" x="6" y="7" w="71" h="71"/>
						<item type="text" id="list_text1" x="90" y="15" w="356" fontcolor="0xFFFFFFFF" fontsize="26"/>
						<item type="text" id="list_text2" x="90" y="49" w="356" fontcolor="0xFFFFFFFF" fontsize="24"/>
						<states>
							<state user="0" touch="disabled">
								<update widget="list_bg_image" value0="170" type="srcy"/>
							</state>
							<state user="0" touch="idle">
								<update widget="list_bg_image" value0="0" type="srcy"/>
							</state>
							<state user="0" touch="action">
								<update widget="list_bg_image" value0="85" type="srcy"/>
							</state>
						</states>
					</item>
					<update widget="list_icon_bg" accessor="list_icon_bg4" type="imageurl"/>
					<update widget="list_icon" accessor="image" type="imageurl"/>
					<update widget="list_text1" accessor="name" type="text"/>
					<update widget="list_text1" accessor="0" type="textcolor"/>
					<update widget="list_text2" accessor="artist" type="text"/>
					<update widget="list_text2" accessor="4" type="textcolor"/>
				</item>
			</item>
	   </item>
	</widgets>
</pane>
